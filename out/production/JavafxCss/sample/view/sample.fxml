<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ToggleGroup?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.web.WebView?>
<BorderPane fx:controller="sample.control.Controller"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="root"
            styleClass="root"
            stylesheets="/sample/css/base.css">

    <top>
        <GridPane style="-fx-text-fill: yellow; -fx-padding: 5">
            <Label GridPane.columnIndex="0"
                   GridPane.rowIndex="0"
                   labelFor="$tfNome"
                   text="Nome:"
                   style="-fx-border-width:3pt;
                   -fx-border-color: red;
                   -fx-border-style: dashed;
                   -fx-font-weight: bolder;
                   -fx-font-size:15pt;
                   -fx-text-fill: aqua"/>
            <TextField fx:id="tfNome"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="0"
                       style="-fx-text-fill: inherit;
                       -fx-display-caret: false;
                       -fx-background-color: brown"

            />
            <Button text="Ok" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#addNome"/>

            <Label GridPane.columnIndex="0"
                   GridPane.rowIndex="2"
                   labelFor="$tfBusca"
                   text="Buscar:"/>

            <TextField fx:id="tfBusca"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="2"
                       onKeyPressed="#acaoTecla"
            />

        </GridPane>
    </top>
    <center>
        <VBox>
            <ListView fx:id="ltvItems"/>
            <Button styleClass="habilitado" fx:id="btRemove"/>
        </VBox>
    </center>
    <bottom>
        <HBox>
            <fx:define>
                <ToggleGroup fx:id="groupo1"/>
            </fx:define>

            <RadioButton text="Base" fx:id="rbBase" toggleGroup="$groupo1" onAction="#mudaStyleSheet"/>
            <RadioButton text="Base2" fx:id="rbBase1" toggleGroup="$groupo1" onAction="#mudaStyleSheet"/>

        </HBox>
    </bottom>
</BorderPane>